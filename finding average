#include<stdio.h>
int main()
{
	int i,n,sum=0,numbers;
	float average;
	
	printf("enter the range of numbers (end limit):\n");
	scanf("%d",&n);
	
	printf("\n enter the elements one by one :\n");
	for(i=0; i<n; i++)
	{
		scanf("%d",&numbers);
		sum += numbers;
	}
	average = sum/n;
	
	printf("\n sum of the %d numbers =%d",n,sum);
	printf("\n average of the %d numbers =%f",n,average);
	
	return 0;
	
}
